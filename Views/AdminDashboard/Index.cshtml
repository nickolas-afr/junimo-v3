@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container my-4">
    <h1 class="display-4 mb-3">Admin Dashboard</h1>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h4 class="mb-0">Game Management</h4>
        </div>
        <div class="card-body">
            <a class="btn btn-primary" asp-controller="Game" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Create New Game
            </a>
        </div>
    </div>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h4 class="mb-0">Support Ticket Management</h4>
        </div>
        <div class="card-body">
            <a class="btn btn-primary" asp-controller="Ticket" asp-action="AdminTickets">
                <i class="bi bi-ticket-detailed"></i> Manage Support Tickets
            </a>
        </div>
    </div>
</div>