@model junimo_v3.Models.GameGenreV2

@{
    ViewData["Title"] = "Add Genre";
}

<h1>Add Genre to Game</h1>
<h4>@ViewBag.GameTitle</h4>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="gameId" value="@ViewBag.GameId" />

    <div class="form-group">
        <label for="genre" class="control-label">Genre</label>
        <input name="genre" id="genre" class="form-control" />
        <span asp-validation-for="genre" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Add Genre" class="btn btn-primary" />
        <a asp-controller="Game" asp-action="GameDetails" asp-route-id="@ViewBag.GameId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
